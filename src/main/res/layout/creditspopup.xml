<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="475dp"
    android:background="@drawable/formabuton"
    android:padding="5dp"
    android:layout_gravity="center"
    android:id="@+id/layoutpopup"
    >

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/x_button"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:fontFamily="@font/almendra_sc"
            android:gravity="center"
            android:text="X"
            android:textColor="@color/colorfosc"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ajuda\n"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Si durant la gimcana teniu problemes amb alguna prova podeu contactar amb l’equip per whatsapp o trucada a través de Whatsapp o trucada amb els botons següents:\n"
            android:textAlignment="center"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/phone_button"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/colorfosc"
                android:background="@drawable/formabuton2"
                android:layout_alignParentLeft="true"
                android:src="@drawable/telefono" />

            <ImageButton
                android:id="@+id/whats_button"
                android:layout_width="0dip"
                android:textColor="@color/colorfosc"
                android:background="@drawable/formabuton2"
                android:layout_weight="1"
                android:layout_height="wrap_content"


                android:src="@drawable/whatsapp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\nInformació\n"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aquesta aplicació ha estat dissenyada pel Jovent del Centre amb el suport del Centre Moral i Cultural del Poblenou, amb l'objectiu de poder celebrar una gimcana durant la Festa Major sense risc de contagi de la COVID-19, minimitzant les interaccions entre persones amb aquesta proposta virtual.\n\n"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Equip\n"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="App Developer\nGuillem Arias Bedmar\n\nDataBase Consultant\nLluís Ssancle\n\nText and Questions\nJudit Martínez Gili\n\nPhoto and Video\nMarçal Olivé Pous\n\nEvent Coordinators \nAleix Bonet-Ragel\nArnau Bonet-Ragel\nIrene López Vilaplana\nBiel Mestres Abella\nEli Coll Rialp \n\n Amb el suport del Centre Moral i Cultural del Poblenou"
            android:textAlignment="center"
            android:textSize="18sp" />

    </LinearLayout>


</ScrollView>